                    "example": "JohnDoe",
                    "required": true
                  },
                  "password": {
                    "type": "string",
                    "example": "Qwerty1234.",
                    "required": true
                  }
                }
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "User created"
